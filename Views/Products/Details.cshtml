@model ClothingStore.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9"><price value="@Model.Price"></price></dd>

            <dt class="col-sm-3">Release Date</dt>
            <dd class="col-sm-9">@Model.ReleaseDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Size</dt>
            <dd class="col-sm-9"><badge text="@Model.Size.ToString()" variant="info"></badge></dd>

            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">
                @if (Model.InStock)
                {
                    <badge text="In Stock" variant="success"></badge>
                }
                else
                {
                    <badge text="Out of Stock" variant="danger"></badge>
                }
            </dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
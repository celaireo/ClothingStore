@model IEnumerable<ClothingStore.Models.Product>
@using ClothingStore.Models
@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-3">
        <input type="text" name="name" value="@ViewBag.Name" class="form-control" placeholder="Name" />
    </div>
    <div class="col-md-3">
        <input type="text" name="category" value="@ViewBag.Category" class="form-control" placeholder="Category" />
    </div>
    <div class="col-md-3">
        <select name="size" class="form-select">    
            <option value="">All Sizes</option>
            @foreach (var s in Enum.GetValues(typeof(Size)))
            {
                <option value="@s" @(ViewBag.Size?.ToString() == s.ToString() ? "selected" : "")>@s</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-primary">Search</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Reset</a>
        <a href="@Url.Action("Create")" class="btn btn-success float-end">Add Product</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Size</th>
            <th>Price</th>
            <th>Release Date</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Category</td>
            <td>
                <badge text="@item.Size.ToString()" variant="info"></badge>
            </td>
            <td>
                <price value="@item.Price"></price>
            </td>
            <td>@item.ReleaseDate.ToShortDateString()</td>
            <td>
                @if (item.InStock)
                {
                    <badge text="In Stock" variant="success"></badge>
                }
                else
                {
                    <badge text="Out of Stock" variant="danger"></badge>
                }
            </td>
            <td>
                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">Details</a>
                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">Edit</a>
                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@item.Id">Delete</button>
                <!-- Delete Modal -->
                <div class="modal fade" id="deleteModal@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel@item.Id" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel@item.Id">Confirm Delete</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        Are you sure you want to delete <strong>@item.Name</strong>?
                      </div>
                      <div class="modal-footer">
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
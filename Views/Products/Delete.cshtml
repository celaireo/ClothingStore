@model ClothingStore.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this product?</strong>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9"><price value="@Model.Price"></price></dd>

            <dt class="col-sm-3">Release Date</dt>
            <dd class="col-sm-9">@Model.ReleaseDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Size</dt>
            <dd class="col-sm-9"><badge text="@Model.Size.ToString()" variant="info"></badge></dd>

            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">
                @if (Model.InStock)
                {
                    <badge text="In Stock" variant="success"></badge>
                }
                else
                {
                    <badge text="Out of Stock" variant="danger"></badge>
                }
            </dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>